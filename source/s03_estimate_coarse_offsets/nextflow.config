profiles {
    standard {

        process {
            executor = 'local'

            withLabel: 'cpu' {
                cpus = 2
            }
        }
    }


    slurm {

        process {
            executor = 'slurm'
            executor.queueSize = 50
            executor.submitRateLimit = '10/2min'
            executor.queue = 'several'

            withLabel: 'cpu' {
                cpus = 2
                memory = '6 GB'
                clusterOptions = '--time=24:00:00 --constraint "infiniband"'
            }
        }
    }
}
