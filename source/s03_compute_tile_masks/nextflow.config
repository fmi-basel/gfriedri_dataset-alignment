profiles {
    standard {

        process {
            executor = 'local'

            withLabel: 'cpu' {
                cpus = 2
            }
        }
    }


    slurm {

        process {
            executor = 'slurm'
            queueSize = 50
            submitRateLimit = '10/2min'
            queue = 'main'

            withLabel: 'cpu' {
                cpus = 2
                memory = '6 GB'
                clusterOptions = '--time=04:00:00 --constraint "infiniband"'
            }
        }
    }
}
